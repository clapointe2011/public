FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

xMin  -0.25;
zMin -0.60;
x 0.15;
y 4.20;
z 0.60;

vertices
(
    ( $xMin 0   $zMin)
    ( $x    0   $zMin)
    ( $x    $y  $zMin)
    ( $xMin $y  $zMin)
    ( $xMin 0   $z)
    ( $x    0   $z)
    ( $x    $y  $z)
    ( $xMin $y  $z)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (4 42 12) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    ground
    {
        type    wall;
        faces
        (
            (0 1 5 4)
        );
    }

    sides
    {
        type    patch;
        faces
        (
            (1 2 6 5)
            (0 3 2 1)
            (0 4 7 3)
            (6 7 4 5)
        );
    }

    top
    {
        type    patch;
        faces
        (
            (7 6 2 3)
        );
    }
);

mergePatchPairs
(
);

