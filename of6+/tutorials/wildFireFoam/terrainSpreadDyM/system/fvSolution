FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "rho.*"
    {
	solver		diagonal;
    }

    "(p_rgh|ph_rgh).*"
    {
        //solver          PCG;
        //preconditioner
        //{
        //    preconditioner        GAMG;
        //    smoother              DICGaussSeidel;
        //    cacheAgglomeration    false;
        //    tolerance             1e-06;
        //    relTol                0;
        //}
        //tolerance       1e-06;
        //relTol          0;

        solver           GAMG;
        smoother         DICGaussSeidel;
        tolerance        1e-6;
        relTol           0;
    }

    "pcorr.*"
    {
        solver        PCG;
        preconditioner
        {
            preconditioner        GAMG;
            smoother              DICGaussSeidel;
            cacheAgglomeration    false;
            tolerance             1e-2;
            relTol                0;
        }
        tolerance      1e-2;
        relTol         0;
    }
    
    "(U|h|Yi|k)"
    {
        solver          PBiCGStab;
	preconditioner	DILU;
        tolerance       1e-16;
        relTol          1e-1;
    }

    "(U|h|Yi|k)Final"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-16;
        relTol          0;
    }

    "Ii.*"
    {
        //solver                GAMG;
        //smoother              DILU;
        //maxIter               1;
        //tolerance             1e-4;
        //relTol                0;

        solver         GAMG;
        smoother       symGaussSeidel;
        maxIter        1;
        nPostSweeps    1;
        tolerance      1e-4;
        relTol         0;
    }
}

PIMPLE
{
    //PIMPLE controls
    momentumPredictor yes;
    hydrostaticInitialization yes;
    turbOnFinalIterOnly no;
    nOuterCorrectors 3;
    nCorrectors      2;
    nNonOrthogonalCorrectors 0;

    //Custom control
    protectOutlet   false;
    addOnlyNearMapped false;
    correctPhi      true;
    nCorrPhi        1;
    startDyMIndex   1;
}

relaxationFactors
{
    equations
    {
        ".*"            1;
    }
}


