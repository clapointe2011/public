{
    version         2.0;
    format          ascii;
    class           dictionary;
    object          controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

        libs ("libsampling.so");
        
        type                    sets;
        writeControl            outputTime;
        writeInterval           1;
        setFormat               raw;
        interpolationScheme     cellPoint;

        fields
        (
	        U
            T
        );
        
        sets
        (
            centerLine
            {
                type            lineUniform;
                axis            y;
                start           (0.08 0 0.08);
                end             (0.08 0.80 0.08);
                nPoints         40;
            }
            
            d0.5
            {
                type            lineUniform;
                axis            x;
                start           (-0.08 0.08 0.08);
                end             (0.24 0.08 0.08);
                nPoints         16;
            }
            
            d1
            {
                type            lineUniform;
                axis            x;
                start           (-0.08 0.16 0.08);
                end             (0.24 0.16 0.08);
                nPoints         16;
            }
            
            d2
            {
                type            lineUniform;
                axis            x;
                start           (-0.08 0.32 0.08);
                end             (0.24 0.32 0.08);
                nPoints         16;
            }
