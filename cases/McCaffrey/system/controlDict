    Enstrophy
    {
       libs ("libutilityFunctionObjects.so");

       type coded;
       name Enstrophy;

       codeExecute
       #{
          const volVectorField& U = mesh().lookupObject<volVectorField>("U");

          volScalarField tenst = 0.5*magSqr(fvc::curl(U));

          tenst -= min(tenst);
          tenst /= max(tenst);

          static autoPtr<volScalarField> pField;
          if(!pField.valid())
          {
              pField.set
              (
                  new volScalarField
                  (
                      IOobject
                      (
                          "sEnst",
                          mesh().time().timeName(),
                          U.mesh(),
                          IOobject::NO_READ,
                          IOobject::AUTO_WRITE
                      ),
                      tenst
                  )
              );
          }

          volScalarField& sEnst = pField();

          sEnst.checkIn();

          sEnst = tenst;
      #};
    }
    
