    sQ
    {
       libs ("libutilityFunctionObjects.so");
        
       type coded;
       name rRho;

       codeExecute
       #{
          const volScalarField& Qdot = mesh().lookupObject<volScalarField>("Qdot");
          
          volScalarField qdot = Qdot;
          qdot -= min(qdot);
          qdot /= max(qdot);
          
          static autoPtr<volScalarField> pField;
          if(!pField.valid())
          {
              pField.set
              (
                  new volScalarField
                  (
                      IOobject
                      (
                          "sQ",
                          mesh().time().timeName(),
                          Qdot.mesh(),
                          IOobject::NO_READ,
                          IOobject::AUTO_WRITE
                      ),
                      qdot
                  )
              );
          }
          
          volScalarField& sQ = pField();
          
          sQ.checkIn();
          
          sQ = qdot;
      #};
    }
    
