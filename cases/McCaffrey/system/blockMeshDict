FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

xMin -1.55;
zMin -1.55;
x 1.55;
y 3;
z 1.55;

vertices
(
    ( $xMin 0   $zMin)
    ( $x    0   $zMin)
    ( $x    $y  $zMin)
    ( $xMin $y  $zMin)
    ( $xMin 0   $z)
    ( $x    0   $z)
    ( $x    $y  $z)
    ( $xMin $y  $z)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) (31 31 31) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    base
    {
        type patch;
        faces
        (
            (0 1 5 4)
        );
    }
    outlet
    {
        type patch;
        faces
        (
            (3 2 6 7)
        );
    }
    sides
    {
        type patch;
        faces
        (
            (0 4 7 3)
            (0 1 2 3)
            (1 5 6 2)
            (4 5 6 7)
        );
    }
);

mergePatchPairs
(
);

