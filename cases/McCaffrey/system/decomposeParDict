FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      decomposeParDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

numberOfSubdomains 3;

method             simple;

simpleCoeffs
{
    n               (1 3 1);
    delta           0.001;
}

hierarchicalCoeffs
{
    n               (1 4 1);
    delta           0.001;
    order           xzy;
}

