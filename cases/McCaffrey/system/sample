FoamFile
{
    version         2.0;
    format          ascii;
    class           dictionary;
    location        "system";
    object          sample;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs            ("libsampling.so");

interpolationScheme cellPoint;

setFormat raw;

sets
(
    centerLine
    {
        type            lineUniform;
        axis            y;
        start           (0 0 0);
        end             (0 3 0);
        nPoints         150;
    }
);

fields
(
    T
    U
);

