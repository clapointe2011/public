solution
{
    active          yes;
    coupled         yes;
    transient       yes;
    cellValueSourceCorrection yes;
    maxCo 0.3;

    sourceTerms
    {
        schemes
        {
            rho         semiImplicit 1;
            U           semiImplicit 1;
            Yi          semiImplicit 1;
            h           semiImplicit 1;
            radiation   semiImplicit 1;
        }
    }

    interpolationSchemes
    {
        rho             cell;
        U               cellPoint;
        thermo:mu       cell;
        T               cell;
        G               cell;
        Cp              cell;
        kappa           cell;
        p               cell;
    }

    integrationSchemes
    {
        U               Euler;
        T               analytical;
    }
}

constantProperties
{
    T0              298.15;

    // place holders for rho0 and Cp0
    // - reset from liquid properties using T0
    rho0            1000;
    Cp0             4187;

    constantVolume  false;
}

