FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 298.15;

boundaryField
{
    top
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    "(ground|coupledWall)"
    {
        type            zeroGradient;
    }

    side
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    burner
    {
        type        fixedValue;
        value       $internalField;
    }

    region0_to_pyrolysisRegion_coupledWall
    {
        type            filmPyrolysisRadiativeCoupledMixed;
        pyrolysisRegion pyrolysisRegion;
        filmRegion      filmRegion;
        Tnbr            T;
        kappaMethod     fluidThermo;
        qrNbr           none;
        qr              qr;
        emissivityMode  solidRadiation;
        filmDeltaDry    0.0;
        filmDeltaWet    2e-4;
        value           $internalField;
    }
}


