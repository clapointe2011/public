FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      turbulenceProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

simulationType  LES;

LES
{
    LESModel       kEqn;

    delta          smooth;

    turbulence     on;

    printCoeffs    on;
    
    kEqnCoeffs
    {
        ck      0.07;
    }
    
    smoothCoeffs
    {
        delta      cubeRootVol;
        
        cubeRootVolCoeffs
        {
            deltaCoeff      1;
        }

        maxDeltaRatio   1.1;
    }
    
    cubeRootVolCoeffs
    {
        deltaCoeff  1;
    }
}


