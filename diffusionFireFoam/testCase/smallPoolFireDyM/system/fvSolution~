FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "rho.*"
    {
        solver          diagonal;
    }
    
    "(p_rgh|ph_rgh|pcorr).*"
    {
        solver         GAMG;
        smoother       GaussSeidel;
        tolerance      1e-6;
        relTol         0;
        
        //solver          PCG;
        //preconditioner  DIC;
        //tolerance       1e-6;
        //relTol          0;
    }
    
    "(U|h|Yi|k).*"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0;
        
        //solver          smoothSolver;
        //smoother        GaussSeidel;
        //tolerance       1e-8;
        //relTol          0;
    }

    "G.*"
    {
        solver         GAMG;
        smoother       GaussSeidel;
        tolerance      1e-4;
        relTol         0;
    }
}

PIMPLE
{
    //PIMPLE controls
    momentumPredictor yes;
    hydrostaticInitialization yes;
    turbOnFinalIterOnly no;
    nOuterCorrectors 3;
    nCorrectors      2;
    nNonOrthogonalCorrectors 0;
    
    //Custom controls
    correctPhi      true;
    startDyMIndex   1;
}

relaxationFactors
{
    equations
    {
        ".*"    1;
    }
}


